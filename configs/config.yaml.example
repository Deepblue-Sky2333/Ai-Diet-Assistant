# ============================================
# AI Diet Assistant Configuration Example
# ============================================
# 
# 此文件仅作为示例，不要直接使用！
# 运行 'scripts/install.sh' 会自动生成 config.yaml 文件
#
# This file is an example only. DO NOT use directly!
# Run 'scripts/install.sh' to automatically generate config.yaml
#

# ============================================
# Server Configuration
# ============================================
server:
  port: 9090
  mode: release  # Options: debug, release, test
  read_timeout: 30s
  write_timeout: 30s

# ============================================
# Database Configuration
# ============================================
# 由安装脚本自动配置 / Automatically configured by install script
database:
  host: localhost
  port: 3306
  user: diet_user
  password: <AUTO_GENERATED>
  dbname: ai_diet_assistant
  charset: utf8mb4
  parse_time: true
  loc: Local
  max_open_conns: 100
  max_idle_conns: 10
  conn_max_lifetime: 3600s

# ============================================
# JWT Configuration
# ============================================
# 由安装脚本自动生成 / Automatically generated by install script
jwt:
  secret: <AUTO_GENERATED_48_BYTES>
  expire_hours: 1
  refresh_expire_hours: 168

# ============================================
# Encryption Configuration
# ============================================
# 由安装脚本自动生成 / Automatically generated by install script
encryption:
  aes_key: <AUTO_GENERATED_32_BYTES>

# ============================================
# Redis Configuration
# ============================================
# 由安装脚本配置 / Configured by install script
redis:
  enabled: false
  host: localhost
  port: 6379
  password: ""
  db: 0
  max_retries: 3
  pool_size: 10

# ============================================
# Rate Limiting
# ============================================
rate_limit:
  enabled: true
  requests_per_minute: 100
  burst: 10

# ============================================
# Logging Configuration
# ============================================
log:
  level: info
  format: json
  output: logs/app.log
  max_size: 100
  max_backups: 3
  max_age: 28
  compress: true

# ============================================
# Security Settings
# ============================================
security:
  max_login_attempts: 5
  lockout_duration: 15m
  password_min_length: 8
  require_special_char: true
  require_number: true
  require_uppercase: true
  
  # Default admin user (auto-created on startup)
  default_user:
    enabled: true
    username: admin
    password: "114514"

# ============================================
# Upload Configuration
# ============================================
upload:
  max_file_size: 10485760  # 10MB
  allowed_types:
    - image/jpeg
    - image/png
    - image/gif
  upload_path: uploads/

# ============================================
# AI Proxy Configuration
# ============================================
# AI 服务配置存储在数据库的 ai_settings 表中
# AI service configuration is stored in the ai_settings table
# 
# 配置项包括 / Configuration includes:
# - api_endpoint: 外部 AI 服务的 API 端点 / External AI service API endpoint
# - api_key: API 密钥（加密存储）/ API key (encrypted storage)
# - model: AI 模型名称 / AI model name
# - timeout: 请求超时时间 / Request timeout
# - max_retries: 最大重试次数 / Maximum retry attempts
#
# 通过管理界面或直接在数据库中配置
# Configure via admin interface or directly in database
